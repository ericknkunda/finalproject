<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegistrationForm">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="13dp"
       android:layout_marginBottom="3dp"
       android:fontFamily="sans-serif-black"
       android:paddingLeft="10dp"
       android:text="create a user name"
       android:textAlignment="center"
       android:textColor="@color/black"
       android:textSize="20dp"
       android:textStyle="bold" />

   <EditText
       android:id="@+id/userName"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:background="@android:color/transparent"
       android:hint="preferred username "
       android:inputType="text|textAutoCorrect"
       android:paddingLeft="10dp"
       android:textSize="18dp"
       android:textStyle="italic" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:fontFamily="sans-serif-black"
       android:paddingLeft="10dp"
       android:text="Phone number"
       android:textAlignment="center"
       android:textAppearance="@color/black"
       android:textColor="@color/black"
       android:textFontWeight="900"
       android:textSize="20dp"
       android:textStyle="bold" />

   <EditText
       android:id="@+id/userPhoneNumber"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:background="@android:color/transparent"
       android:hint="Your phone number "
       android:inputType="number"
       android:paddingLeft="10dp"
       android:textSize="18dp"
       android:textStyle="italic" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:fontFamily="sans-serif-black"
       android:paddingLeft="10dp"
       android:text="Email address"
       android:textAlignment="center"
       android:textAppearance="@color/black"
       android:textColor="@color/black"
       android:textFontWeight="900"
       android:textSize="20dp"
       android:textStyle="bold" />

   <EditText
       android:id="@+id/userEmailAddress"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:background="@android:color/transparent"
       android:hint="Your Email address"
       android:inputType="textEmailAddress|textAutoCorrect"
       android:paddingLeft="10dp"
       android:textColor="@color/black"
       android:textFontWeight="900"
       android:textSize="18dp"
       android:textStyle="italic" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:fontFamily="sans-serif-black"
       android:paddingLeft="10dp"
       android:text="Your Gender"
       android:textAlignment="center"
       android:textAppearance="@color/black"
       android:textColor="@color/black"
       android:textFontWeight="900"
       android:textSize="20dp"
       android:textStyle="bold" />

   <Spinner
       android:id="@+id/userGender"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="10dp"
       android:fontFamily="sans-serif-black"
       android:spinnerMode="dropdown"
       android:textAlignment="center" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="3dp"
       android:fontFamily="sans-serif-black"
       android:paddingLeft="10dp"
       android:text="Your Age Range"
       android:textAlignment="center"
       android:textAppearance="@color/black"
       android:textColor="@color/black"
       android:textFontWeight="900"
       android:textSize="20dp"
       android:textStyle="bold" />

   <Spinner
       android:id="@+id/userAgeRange"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="10dp"
       android:fontFamily="sans-serif-black"
       android:spinnerMode="dropdown"
       android:textAlignment="center" />

   <Button
       android:id="@+id/btnSend"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="250dp"
       android:fontFamily="sans-serif"
       android:textFontWeight="900"
       android:textColor="@color/white"

       android:text="send"
       android:textAlignment="center"
       android:textSize="20dp" />

</LinearLayout>